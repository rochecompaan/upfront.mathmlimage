<?xml version="1.0"?>

<!-- MathML-to-SVG configuration file -->
<config verbose="true">
    <!-- Fallback font family -->
    <fallback family="FreeSans"/>
    
    <!-- Default values for MathML properties. -->
    <!-- Most of these are defined in the MathML Rec - change with care -->
    <defaults displaystyle="false"
              mathsize="12pt"
              scriptminsize="8pt"
              scriptsizemultiplier="0.71"
              veryverythinmathspace="0.0555556em"
              verythinmathspace="0.111111em"
              thinmathspace="0.166667em"
              mediummathspace="0.222222em"
              thickmathspace="0.277778em"
              verythickmathspace="0.333333em"
              veryverythickmathspace="0.388889em"
              rowspacing="1.0ex"
              columnspacing="0.8em"
              framespacing="0.4em 0.5ex"/>

    <!-- Additional styling for individual operators -->
    <!-- Make differentials italic -->
    <operator-style operator="&#x2145;" fontstyle="italic"/>
    <operator-style operator="&#x2146;" fontstyle="italic"/>
    
    <!-- Font families -->
    <family name="Times New Roman">
         <font ttf="/usr/share/fonts/truetype/msttcorefonts/Times_New_Roman.ttf"/>
         <font weight="bold" ttf="/usr/share/fonts/truetype/msttcorefonts/Times_New_Roman_Bold.ttf"/>
         <font style="italic" ttf="/usr/share/fonts/truetype/msttcorefonts/Times_New_Roman_Italic.ttf"/>
         <font weight="bold" style="italic" ttf="/usr/share/fonts/truetype/msttcorefonts/Times_New_Roman_Bold_Italic.ttf"/>
    </family>

    <family name="Arial">
         <font ttf="/usr/share/fonts/truetype/msttcorefonts/Arial.ttf"/>
         <font weight="bold" ttf="/usr/share/fonts/truetype/msttcorefonts/Arial_Bold.ttf"/>
         <font style="italic" ttf="/usr/share/fonts/truetype/msttcorefonts/Arial_Italic.ttf"/>
         <font weight="bold" style="italic" ttf="/usr/share/fonts/truetype/msttcorefonts/Arial_Bold_Italic.ttf"/>
    </family>

    <family name="Courier New">
         <font ttf="/usr/share/fonts/truetype/msttcorefonts/Courier_New.ttf"/>
         <font weight="bold" ttf="/usr/share/fonts/truetype/msttcorefonts/Courier_New_Bold.ttf"/>
         <font style="italic" ttf="/usr/share/fonts/truetype/msttcorefonts/Courier_New_Italic.ttf"/>
         <font weight="bold" style="italic" ttf="/usr/share/fonts/truetype/msttcorefonts/Courier_New_Bold_Italic.ttf"/>
    </family>

    <family name="FreeSans">
         <font ttf="/usr/share/fonts/truetype/freefont/FreeSans.ttf"/>
         <font weight="bold" ttf="/usr/share/fonts/truetype/freefont/FreeSansBold.ttf"/>
         <font style="italic" ttf="/usr/share/fonts/truetype/freefont/FreeMonoOblique.ttf"/>
         <font weight="bold" style="italic" ttf="/usr/share/fonts/truetype/freefont/FreeSansBoldOblique.ttf"/>
    </family>

    <!-- Math variant definitions -->
    <!-- Serif -->
    <mathvariant name="normal"
                 family="Times New Roman, FreeSans"/>                 
    <mathvariant name="bold"
                 family="Times New Roman, FreeSans" weight="bold"/>
    <mathvariant name="italic"
                 family="Times New Roman, FreeSans" style="italic"/>
    <mathvariant name="bold-italic"
                 family="Times New Roman, FreeSans" weight="bold" style="italic"/>

    <!-- Sans-Serif -->
    <mathvariant name="sans-serif"
                 family="Arial, FreeSans"/>                 
    <mathvariant name="bold-sans-serif"
                 family="Arial, FreeSans" weight="bold"/>
    <mathvariant name="sans-serif-italic"
                 family="Arial, FreeSans" style="italic"/>
    <mathvariant name="sans-serif-bold-italic"
                 family="Arial, FreeSans" weight="bold" style="italic"/>

    <!-- Fraktur -->
    <mathvariant name="fraktur" 
                 family="Euclid Fraktur, FreeSans"/>
    <mathvariant name="bold-fraktur" 
                 family="Euclid Fraktur, FreeSans" weight="bold"/>

    <!-- Script -->
    <mathvariant name="script" 
                 family="Monotype Corsiva, FreeSans"/>
    <mathvariant name="bold-script" 
                 family="Monotype Corsiva, FreeSans" weight="bold"/>

    <!-- Monospace -->
    <mathvariant name="monospace" family="Courier New, FreeSans"/>

    <!-- Double-struck -->
    <mathvariant name="double-struck" family="Mathematica7, FreeSans"/>
</config>
